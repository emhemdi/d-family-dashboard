<!-- Multiple -->
<div ng-show="display==='inline'" class="upload-inline" ng-class="{'multiple': multiple}" style="margin-top:8px">
    <div ng-repeat="item in queue">
        <i class="fa fa-times-circle" ng-click="removeItem(item, $index)"></i>
        <div class="circle-progress-bar" progress="item.progress" ng-show="item.state === 'uploading'"></div>
        <div ng-show="type==='image'" kr-square-image="{{item.thumbnail}}" ng-class="{idle:item.state === 'idle' || item.state === 'uploading'}"
            style="width:80px;height:80px">
        </div>
        <div ng-if="type==='video'" ng-class="{idle:item.state === 'idle' || item.state === 'uploading'}" style="width:80px;height:80px">
            <section class="video">
                <video controls>
                    <source ng-if="item.video" src='{{item.video}}' type="video/mp4">
                </video>

            </section>


        </div>

        <div class="progress" ng-hide="item.url || item.state === 'uploaded' || item.state === 'error'" style="margin-bottom: 0px;">
            <div class="progress-bar progress-bar-striped active progress-bar-success" ng-style="item.state === 'startUploaded'?{width:70 + '%'}:{width:0 + '%'}"></div>
        </div>
        <div class="fileUpload btn btn-xs btn-circle btn-outline btn-default" ng-disabled="uploading" ng-hide="multiple">
            <span class="fa fa-reload"></span> تغيير
            <input type="file" class="upload" style="margin-top:5px;" kr-multiple="multiple" />
        </div>
    </div>

    <div class="fileUpload" ng-disabled="uploading" ng-hide="!multiple && queue.length" style="width:80px;height:80px;">
        <span class="fa fa-plus"></span>
        <input type="file" class="upload" style="margin-top:5px;" kr-multiple="multiple" />
    </div>
</div>